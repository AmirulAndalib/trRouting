# required libraries: boost, capnproto, libosrm, curses

OS := $(shell uname)
CC = clang++
LOCAL_CPP_FILES := $(wildcard src/*.cpp)
SPECIFIC_CPP_FILES := $(wildcard connection_scan_algorithm/src/*.cpp)
SPECIFIC_CAPNP_C++_FILES := $(wildcard include/capnp/*.c++)
LOCAL_OBJS = $(addprefix obj/,$(notdir $(LOCAL_CPP_FILES:.cpp=.o)))
SPECIFIC_OBJS = $(addprefix connection_scan_algorithm/obj/,$(notdir $(SPECIFIC_CPP_FILES:.cpp=.o)))
CAPNP_OBJS = $(addprefix include/capnp/obj/,$(notdir $(SPECIFIC_CAPNP_C++_FILES:.c++=.o)))

#LDFLAGS  := -DBOOST_TEST_DYN_LINK -DBOOST_SPIRIT_USE_PHOENIX_V3 -DBOOST_RESULT_OF_USE_DECLTYPE -DBOOST_FILESYSTEM_NO_DEPRECATED -I/usr/local/include -Iinclude -Iconnection_scan_algorithm/include -I/usr/local/Cellar/osrm-backend/5.18.0/include -I/usr/local/Cellar/osrm-backend/5.18.0/include/osrm -L/usr/local/lib -losrm /usr/local/lib/libboost_regex-mt.dylib /usr/local/lib/libboost_date_time-mt.dylib /usr/local/lib/libboost_chrono-mt.dylib /usr/local/lib/libboost_filesystem-mt.dylib /usr/local/lib/libboost_iostreams-mt.dylib /usr/local/lib/libboost_thread-mt.dylib /usr/local/lib/libboost_system-mt.dylib /usr/local/lib/libtbb.dylib /usr/local/lib/libtbbmalloc.dylib /usr/lib/libz.dylib -lcurses -lcapnp -lkj
LDFLAGS  := -I/usr/local/include -Iinclude -Iconnection_scan_algorithm/include -I/usr/local/include/osrm -I

ifeq ($(OS),Darwin) 
	# macox
	CXXFLAGS += -std=c++14 -stdlib=libc++
	#LINKFLAGS = -lboost_thread-mt -lboost_serialization -lboost_system -lboost_filesystem -lboost_regex -lboost_program_options
	LINKFLAGS = -L/usr/local/lib -lboost_iostreams -losrm -lcurses -lcapnp -lkj -lboost_thread-mt -lboost_serialization -lboost_system -lboost_filesystem -lboost_regex -lboost_program_options -lboost_date_time
else
	# linux or other (only linux ubuntu and debian are supported right now)
	CXXFLAGS += -std=c++14 -stdlib=libstdc++
	LINKFLAGS = -L/usr/local/lib -losrm -lcurses -lcapnp -lkj -pthread -lboost_thread -lboost_serialization -lboost_system -lboost_filesystem -lboost_regex -lboost_program_options -lboost_date_time
endif

all: trRoutingCSA

trRoutingCSA: $(LOCAL_OBJS) $(SPECIFIC_OBJS) $(PROTO_OBJS)
	$(CC) $(CXXFLAGS) $(LDFLAGS) $(LINKFLAGS) $^ -O3 -MD -o $@

include/capnp/obj/%.o: include/capnp/%.c++
	$(CC) $(CXXFLAGS) $(LDFLAGS) -O3 -MD -c -o $@ $<

obj/%.o: src/%.cpp
	$(CC) $(CXXFLAGS) $(LDFLAGS) -O3 -MD -c -o $@ $<

connection_scan_algorithm/obj/%.o: connection_scan_algorithm/src/%.cpp
	$(CC) $(CXXFLAGS) $(LDFLAGS) -O3 -MD -c -o $@ $<

clean:
	-rm connection_scan_algorithm/obj/*.o connection_scan_algorithm/obj/*.d obj/*.o obj/*.d include/capnp/obj/*.o include/capnp/obj/*.d trRoutingCSA

## this is useful to refresh all dependent files if a header file changes:
#-include $(CAPNP_OBJS:.o=.d)
#-include $(LOCAL_OBJS:.o=.d)
#-include $(SPECIFIC_OBJS:.o=.d)